# Configuración local de desarrollo

# Puerto y host de Express
PORT=3000
HOST=0.0.0.0

# Datos de la base de datos local
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASS=tu_contraseña_local
DB_NAME=soportebd

# Opciones de sesión
# TRUST_PROXY debe ser 0 en local, se activa en Railway para que
# Express confíe en la cabecera X-Forwarded-Proto y se permitan
# cookies seguras.  COOKIE_SECURE=0 porque se utiliza HTTP en local.
TRUST_PROXY=0
COOKIE_SECURE=0

# Clave secreta de sesión (cambia este valor en producción)
SESSION_SECRET=cambia_esto_por_un_valor_aleatorio