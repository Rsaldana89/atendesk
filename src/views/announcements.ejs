      const icons = {
        'ALL': 'ðŸ“¢',
        'Capital Humano': 'ðŸ‘¥',
        'CEDIS': 'ðŸšš',
        'Compras': 'ðŸ›’',
        'Finanzas': 'ðŸ’°',
        'Inventarios': 'ðŸ“¦',
        'Mantenimiento': 'ðŸ› ï¸',
        'Panaderia': 'ðŸ¥',
        'Sistemas': 'ðŸ’»',
        // Icono sugerido para Mercadotecnia: grÃ¡fico de crecimiento/marketing
        'Mercadotecnia': 'ðŸ“ˆ'
      };
