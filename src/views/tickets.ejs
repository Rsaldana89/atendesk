<section class="card">
  <h1>Tickets</h1>
  <table class="table">
    <thead>
      <tr>
        <th>ID</th>
        <th>Asunto</th>
        <th>Departamento</th>
        <th>Estatus</th>
        <th>Abierto</th>
        <th>Reportante</th>
      </tr>
    </thead>
    <tbody>
      <% if (tickets.length === 0) { %>
        <tr><td colspan="6" class="empty">Sin tickets</td></tr>
      <% } %>
      <% tickets.forEach(t => { %>
        <tr>
          <td><%= t.id %></td>
          <td><%= t.subject %></td>
          <td><%= t.department %></td>
          <td><%= t.status %></td>
          <td><%= new Date(t.opened_at).toLocaleString() %></td>
          <td><%= t.created_by_name %></td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</section>
